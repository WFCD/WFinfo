<Application x:Class="WFInfo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WFInfo"
             StartupUri="MainWindow.xaml"
             ShutdownMode="OnMainWindowClose"
             Exit="Application_Exit">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Templates/Fonts.xaml" />
                <ResourceDictionary Source="Templates/TreeView.xaml" />
                <ResourceDictionary Source="Templates/Styles.xaml" />
                <ResourceDictionary Source="Templates/PopupMenu.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
